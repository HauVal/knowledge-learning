{% extends 'base.html.twig' %}

{% block title %}Mon Profil{% endblock %}

{% block body %}
    <link rel="stylesheet" href="{{ asset('css/profilePage.css') }}">

    <header>
        <img src="{{ asset('images/logo.jpg') }}" alt="Logo">
            <h1>Knowledge Learning</h1>
        <a href="/logout">DECONNEXION</a>
    </header>

    <main>
        <h2>Bonjour, {{ app.user.name }} !</h2>

        <a href="{{ path('app_certifications') }}"class="certification">Certifications obtenues</a>

        <p>Voici les formations disponibles :</p>

        <div class="list-themes">
            {% for theme in themes %}
                <a href="{{ path('app_theme_show', { id: theme.id }) }}">{{ theme.name }}</a>
            {% endfor %}
        </div>
    </main>

    <footer>
        <img src="{{ asset('images/logo.jpg') }}" alt="Logo">
    </footer>
{% endblock %}
