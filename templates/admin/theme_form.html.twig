{% extends 'base.html.twig' %}

{% block title %}Gérer un Thème{% endblock %}

{% block body %}
    <link rel="stylesheet" href="{{ asset('css/lessonForm.css') }}">

    <header>
        <img src="{{ asset('images/logo.jpg') }}" alt="Logo">
            <h1>Back-office</h1>
        <a href="/logout">DECONNEXION</a>
    </header>

    <main>
        <h2>
            {% if theme.id %}
                Modifier
            {% else %}
                Ajouter
            {% endif %}
             un Thème
        </h2>

        {{ form_start(form) }}
        {{ form_widget(form) }}
        <button class="btn btn-success">Enregistrer</button>
        {{ form_end(form) }}

        <a href="{{ path('admin_content') }}">Retour</a>
    </main>

    <footer>
        <img src="{{ asset('images/logo.jpg') }}" alt="Logo">
    </footer>
{% endblock %}
